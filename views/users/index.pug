extends ../layout/common.pug

block content
    h1
        span Users
    a.btn.btn-primary(href="/users/create") New user

    .d-flex.align-items-center
        form.ml-auto(action="/users/search", method="GET")
            input(type="text", name="q")
            button(class="btn btn-primary ml-2") search

    table.table
        tr  
            th Avatar
            th Name
            th Phone
            th More
        each user in users
            tr
                td
                    img(src=user.avatar , width=64)
                td= user.name
                td= user.phone
                td 
                    a(href='/users/'+ user.id) View