extends ../layout/common.pug
block content
    h1 Products

    .d-flex.align-items-center
        form.ml-auto(action="/users/search", method="GET")
            input(type="text", name="q")
            button(class="btn btn-primary ml-2") search

    .card-deck
        each product in products
            .card(style='width: 180px')
                img.card-img-top(src= product.image, alt='Card image cap', width='100px', height='150')
                .card-body
                    h5.card-title= product.name
                    p.card-text= product.description
                    a.btn.btn-primary(href='#') Buy
         

     

                
